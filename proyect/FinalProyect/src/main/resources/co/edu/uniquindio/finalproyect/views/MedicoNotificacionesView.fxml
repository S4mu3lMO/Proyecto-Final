<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.finalproyect.viewController.medicoSubViews.MedicoNotificacionesController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Mis Notificaciones de Citas">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <ListView fx:id="listViewNotificaciones" prefHeight="300.0" VBox.vgrow="ALWAYS" />
        <Button fx:id="btnRefrescarNotificaciones" mnemonicParsing="false" onAction="#handleRefrescarNotificaciones" text="Refrescar Notificaciones" />
    </children>
</VBox>