<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPacientePanel" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.finalproyect.viewController.PacienteViewController">
    <top>
        <Label text="Portal del Paciente" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <BorderPane.margin>
                <Insets bottom="10.0" top="10.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <left>
        <VBox prefWidth="230.0" spacing="10.0" style="-fx-background-color: #E8F5E9; -fx-padding: 15; -fx-border-color: #A5D6A7; -fx-border-width: 0 1 0 0;">
            <children>
                <Label fx:id="lblNombrePacienteMenu" text="Paciente: [Nombre Paciente]">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
                <Button fx:id="btnMisDatosPersonales" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleMisDatosPersonales" text="Mis Datos Personales">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <Button fx:id="btnGestionarMisCitas" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleGestionarMisCitas" text="Gestionar Mis Citas">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <Button fx:id="btnVerMiHistorial" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleVerMiHistorial" text="Consultar Mi Historial Médico">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <Button fx:id="btnVerMisNotificaciones" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleVerMisNotificaciones" text="Mis Notificaciones">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <VBox alignment="BOTTOM_LEFT" VBox.vgrow="ALWAYS">
                    <children>
                        <Button fx:id="btnCerrarSesionPaciente" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCerrarSesionPaciente" text="Cerrar Sesión">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>
    <center>
        <Label text="Bienvenido(a). Seleccione una opción del menú." BorderPane.alignment="CENTER">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
    </center>
</BorderPane>
