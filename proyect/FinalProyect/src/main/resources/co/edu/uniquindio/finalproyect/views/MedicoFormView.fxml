        </GridPane>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <children>
                <Button fx:id="btnGuardarMedico" mnemonicParsing="false" onAction="#handleGuardarMedico" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Guardar">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="btnCancelarMedico" mnemonicParsing="false" onAction="#handleCancelarMedico" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Cancelar">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
            </children>
