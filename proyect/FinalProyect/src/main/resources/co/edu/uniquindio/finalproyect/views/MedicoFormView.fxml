    <children>
        <Label fx:id="lblTituloFormMedico" text="Datos del Médico">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="140.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="280.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Cédula:" GridPane.halignment="RIGHT" />
                <TextField fx:id="txtCedulaMedico" GridPane.columnIndex="1" />
                <Label text="Nombre Completo:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                <TextField fx:id="txtNombreMedico" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Edad:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                <TextField fx:id="txtEdadMedico" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Sexo:" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                <ComboBox fx:id="cbSexoMedico" prefWidth="280.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Nombre de Usuario:" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                <TextField fx:id="txtUsuarioMedico" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Label text="Contraseña:" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
                <PasswordField fx:id="txtContrasenaMedico" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <Label text="Especialidad:" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
                <TextField fx:id="txtEspecialidadMedico" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <Label text="No. Licencia Médica:" GridPane.halignment="RIGHT" GridPane.rowIndex="7" />
                <TextField fx:id="txtLicenciaMedico" GridPane.columnIndex="1" GridPane.rowIndex="7" />
